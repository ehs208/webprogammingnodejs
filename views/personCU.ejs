<div class="container">	
    <h2><%= check === 'create' ? '정보 입력' : '정보 수정' %></h2>
	<form action="/person/<%= check === 'create' ? 'create' : 'update' %>_process" method="post">
		<% if (check === 'update') { %>
			<input type="hidden" name="loginid" value="<%= perdata[0].loginid %>">
		<% } else if (check === 'create') { %>
			<div class="mb-3">
				<label class="form-label" for="id">아이디</label> 
				<input class="form-control" type="text" name="id" style="width:300px" value="" />
			</div>
		<% } %>
        <div class="mb-3">
			<label class="form-label" for="id">비밀번호</label> 
			<input class="form-control" type="password" name="password" style="width:300px;" value="<%= check === 'update' ? perdata[0].password : '' %>" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">이름</label> 
			<input class="form-control" type="text" name="name" style="width:300px;" value="<%= check === 'update' ? perdata[0].name : '' %>" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">주소</label> 
			<input class="form-control" type="text" name="address" style="width:300px;" value="<%= check === 'update' ? perdata[0].address : '' %>" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">번호</label> 
			<input class="form-control" type="text" name="tel" style="width:300px;" value="<%= check === 'update' ? perdata[0].tel : '' %>" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">생일</label> 
			<input class="form-control" type="text" name="birth" style="width:300px;" value="<%= check === 'update' ? perdata[0].birth : '' %>" />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">포인트</label> 
			<input class="form-control" type="text" name="point" style="width:300px;" value="<%= check === 'update' ? perdata[0].point : '' %>" />
		</div>

		<div class="mb-3">
            <label class="form-label" for="class">Class</label>
            <select class="form-select" name="class" id="class" style="width:300px;" value="<%= check === 'update' ? perdata[0].class : '' %>">
                <option value="00">00</option>
                <option value="01">01</option>
                <option value="02">02</option>
            </select>
        </div>

        <button class="btn btn-outline-primary btn-sm" type="submit"><%= check === 'create' ? '입력' : '수정' %></button>
  </form>
</div>
